<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:id="@+id/container_r">

    <ImageView
        android:id="@+id/feed_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/content_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle_shape" />

    <LinearLayout
        android:id="@+id/linear_txt_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingVertical="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/feed_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/feed_shape"
        app:layout_constraintTop_toTopOf="@+id/feed_shape"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/feed_title_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/cardview_dark_background"
            android:textColor="@color/colorAccent"
            android:padding="8dp"
            android:text="@string/title" />

        <TextView
            android:id="@+id/feed_weight_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/design_default_color_primary_variant"
            android:textColor="@color/colorAccent"
            android:padding="8dp"
            android:text="@string/weight" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>